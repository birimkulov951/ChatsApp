<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_search"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/blank_profile" />

    <TextView
        android:id="@+id/user_name_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:layout_toEndOf="@id/profile_image_search"
        android:layout_centerInParent="true"
        android:layout_marginStart="12dp"
        android:textSize="19sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/online_image_search"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:civ_border_width="12dp"
        app:civ_border_color="#05df29"
        android:src="@drawable/ic_profile"
        android:layout_below="@id/user_name_search"
        android:layout_marginTop="12dp"
        android:layout_marginStart="-16dp"
        android:layout_toEndOf="@id/profile_image_search"
        android:visibility="gone"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/offline_image_search"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:civ_border_width="12dp"
        app:civ_border_color="#bfbfbf"
        android:src="@drawable/ic_profile"
        android:layout_below="@id/user_name_search"
        android:layout_marginTop="12dp"
        android:layout_marginStart="-16dp"
        android:layout_toEndOf="@id/profile_image_search" />

    <TextView
        android:id="@+id/last_message_search"
        android:layout_width="wrap_content"
        android:layout_below="@id/user_name_search"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profile_image_search"
        android:layout_marginTop="14dp"
        android:padding="6dp"
        android:layout_marginStart="20dp"
        android:textSize="19sp"
        android:maxLines="1"
        android:textColor="@color/colorPrimaryDark"/>

</RelativeLayout>